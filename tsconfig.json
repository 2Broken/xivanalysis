{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"dom",
			"dom.iterable"
		],

		"types": [
			"webpack-env",
			"jest"
		],

		"baseUrl": "./src"
	},

	"include": [
		"src/**/*"
	]
}
